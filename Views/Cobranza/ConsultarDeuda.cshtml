@model Audicob.Models.ViewModels.Cobranza.DeudaDetalleViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Detalle de la Deuda";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Detalle de la Deuda</h2>
    <a class="btn btn-outline-secondary btn-sm" asp-controller="Cobranza" asp-action="Clientes">
        ← Volver a clientes
    </a>
</div>

<div class="card mb-3">
    <div class="card-header bg-primary text-white fw-semibold">
        Información del Cliente
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-6">
                <div><strong>Cliente:</strong> @Model.Cliente</div>
                <div><strong>Días de atraso:</strong> @Model.DiasAtraso</div>
                <div><strong>Tasa penalidad (mensual):</strong> @Model.TasaPenalidad.ToString("P2")</div>
            </div>
            <div class="col-md-6">
                <div><strong>Monto original:</strong> S/ @Model.MontoDeuda.ToString("N2")</div>
                <div><strong>Fecha de vencimiento:</strong> @Model.FechaVencimiento.ToString("dd/MM/yyyy")</div>
                <div><strong>Penalidad calculada:</strong> S/ @Model.PenalidadCalculada.ToString("N2")</div>
            </div>
        </div>
        <hr />
        <div class="d-flex align-items-center justify-content-between">
            <div class="fs-5">
                <strong>Total a pagar:</strong>
                <span class="text-danger">S/ @Model.TotalAPagar.ToString("N2")</span>
            </div>

            <div class="text-end">
                <form asp-controller="Cobranza"
                      asp-action="ActualizarPenalidad"
                      method="post"
                      class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="clienteId" value="@Model.ClienteId" />
                    <button type="submit" class="btn btn-warning btn-sm">
                        <i class="bi bi-arrow-clockwise"></i> Actualizar penalidad
                    </button>
                </form>

                <a class="btn btn-primary btn-sm"
                   asp-controller="Cobranza"
                   asp-action="GenerarComprobante"
                   asp-route-clienteId="@Model.ClienteId">
                    <i class="bi bi-file-earmark-pdf"></i> Generar comprobante PDF
                </a>
            </div>
        </div>
    </div>
</div>

@model Audicob.Models.ViewModels.Supervisor.FiltroMoraViewModel

@{
    ViewData["Title"] = "Filtrar Estado de la Mora - HU-29";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-funnel"></i> Filtrar Estado de la Mora</h2>
                <div>
                    <small class="text-muted">Historia de Usuario 29</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Panel de Filtros -->
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-sliders"></i> Criterios de Filtrado</h5>
                </div>
                <div class="card-body">
                    <form asp-action="FiltrarMora" method="post">
                        
                        <!-- Rango de Días en Mora -->
                        <div class="mb-3">
                            <label class="form-label"><strong>Días en Mora</strong></label>
                            <div class="row">
                                <div class="col-6">
                                    <input asp-for="RangoDiasDesde" class="form-control" placeholder="Desde" type="number" min="0" />
                                    <small class="text-muted">Desde</small>
                                </div>
                                <div class="col-6">
                                    <input asp-for="RangoDiasHasta" class="form-control" placeholder="Hasta" type="number" min="0" />
                                    <small class="text-muted">Hasta</small>
                                </div>
                            </div>
                        </div>

                        <!-- Tipo de Cliente -->
                        <div class="mb-3">
                            <label asp-for="TipoCliente" class="form-label"><strong>Tipo de Cliente</strong></label>
                            <select asp-for="TipoCliente" class="form-select">
                                <option value="">-- Todos los tipos --</option>
                                <option value="Pendiente">Pendiente</option>
                                <option value="Aceptado">Aceptado</option>
                                <option value="Rechazado">Rechazado</option>
                            </select>
                        </div>

                        <!-- Rango de Montos -->
                        <div class="mb-3">
                            <label class="form-label"><strong>Monto en Mora</strong></label>
                            <div class="row">
                                <div class="col-6">
                                    <input asp-for="MontoDesde" class="form-control" placeholder="0.00" type="number" step="0.01" min="0" />
                                    <small class="text-muted">Desde S/.</small>
                                </div>
                                <div class="col-6">
                                    <input asp-for="MontoHasta" class="form-control" placeholder="0.00" type="number" step="0.01" min="0" />
                                    <small class="text-muted">Hasta S/.</small>
                                </div>
                            </div>
                        </div>

                        <!-- Estado de Mora -->
                        <div class="mb-3">
                            <label asp-for="EstadoMora" class="form-label"><strong>Estado de Mora</strong></label>
                            <select asp-for="EstadoMora" class="form-select">
                                <option value="">-- Todos los estados --</option>
                                <option value="Temprana">Temprana (1-29 días)</option>
                                <option value="Moderada">Moderada (30-59 días)</option>
                                <option value="Grave">Grave (60-89 días)</option>
                                <option value="Crítica">Crítica (90+ días)</option>
                            </select>
                        </div>

                        <!-- Guardar Filtro -->
                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="GuardarFiltro" class="form-check-input" type="checkbox" />
                                <label asp-for="GuardarFiltro" class="form-check-label">
                                    Guardar este filtro
                                </label>
                            </div>
                            <div id="nombreFiltroDiv" style="display: none;" class="mt-2">
                                <input asp-for="NombreFiltroGuardado" class="form-control" placeholder="Nombre del filtro" />
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search"></i> Aplicar Filtros
                            </button>
                            <button type="button" class="btn btn-outline-secondary" onclick="limpiarFiltros()">
                                <i class="bi bi-arrow-counterclockwise"></i> Limpiar
                            </button>
                        </div>
                    </form>

                    <!-- Filtros Guardados -->
                    @if (Model.FiltrosGuardados.Any())
                    {
                        <hr />
                        <h6><i class="bi bi-bookmark"></i> Filtros Guardados</h6>
                        <div class="list-group">
                            @foreach (var filtro in Model.FiltrosGuardados)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>@filtro.Nombre</span>
                                    <form asp-action="CargarFiltroGuardado" method="post" class="d-inline">
                                        <input type="hidden" name="filtroId" value="@filtro.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-play"></i>
                                        </button>
                                    </form>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Panel de Resultados -->
        <div class="col-md-8">
            @if (Model.ResultadosFiltrados.Any())
            {
                <div class="card shadow-sm">
                    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-list-check"></i> 
                            Resultados Filtrados (@Model.TotalRegistros registros)
                        </h5>
                        <div>
                            <form asp-action="ExportarResultadosMora" method="post" class="d-inline">
                                @Html.Hidden("RangoDiasDesde", Model.RangoDiasDesde)
                                @Html.Hidden("RangoDiasHasta", Model.RangoDiasHasta)
                                @Html.Hidden("TipoCliente", Model.TipoCliente)
                                @Html.Hidden("MontoDesde", Model.MontoDesde)
                                @Html.Hidden("MontoHasta", Model.MontoHasta)
                                @Html.Hidden("EstadoMora", Model.EstadoMora)
                                <button type="submit" class="btn btn-sm btn-outline-light">
                                    <i class="bi bi-download"></i> Descargar
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <!-- Información de Performance -->
                        <div class="bg-light p-2 border-bottom">
                            <small class="text-muted">
                                <i class="bi bi-clock"></i> 
                                Consulta ejecutada en <strong>@Model.TiempoRespuesta.TotalSeconds.ToString("F2") segundos</strong>
                                | <i class="bi bi-calendar"></i> @Model.FechaConsulta.ToString("dd/MM/yyyy HH:mm:ss")
                            </small>
                        </div>

                        <!-- Tabla de Resultados -->
                        <div class="table-responsive">
                            <table class="table table-hover table-sm mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Cliente</th>
                                        <th>Documento</th>
                                        <th>Deuda Total</th>
                                        <th>Días Mora</th>
                                        <th>Monto Mora</th>
                                        <th>Prioridad</th>
                                        <th>Estado</th>
                                        <th>Asesor</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ResultadosFiltrados.Take(50))
                                    {
                                        <tr class="@(item.NivelPrioridad == "Crítica" ? "table-danger" : 
                                                    item.NivelPrioridad == "Alta" ? "table-warning" : "")">
                                            <td>
                                                <strong>@item.Nombre</strong>
                                                <br />
                                                <small class="text-muted">
                                                    Ingresos: @item.IngresosMensuales.ToString("C")
                                                </small>
                                            </td>
                                            <td>@item.Documento</td>
                                            <td>
                                                <strong class="text-danger">@item.DeudaTotal.ToString("C")</strong>
                                            </td>
                                            <td>
                                                <span class="badge bg-@item.ColorIndicador">
                                                    @item.DiasEnMora días
                                                </span>
                                            </td>
                                            <td>
                                                <strong>@item.MontoEnMora.ToString("C")</strong>
                                            </td>
                                            <td>
                                                <span class="badge bg-@item.ColorIndicador">
                                                    @item.NivelPrioridad
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@item.EstadoMora</span>
                                            </td>
                                            <td>
                                                <small>
                                                    @(string.IsNullOrEmpty(item.AsesorAsignado) ? "Sin Asignar" : item.AsesorAsignado)
                                                </small>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="#" class="btn btn-outline-primary" title="Ver Detalle">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a href="#" class="btn btn-outline-success" title="Gestionar">
                                                        <i class="bi bi-gear"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        @if (Model.ResultadosFiltrados.Count > 50)
                        {
                            <div class="p-3 bg-light border-top text-center">
                                <small class="text-muted">
                                    Mostrando los primeros 50 de @Model.TotalRegistros resultados. 
                                    <strong>Descargue el archivo completo</strong> para ver todos los datos.
                                </small>
                            </div>
                        }
                    </div>
                </div>

                <!-- Resumen por Prioridad -->
                <div class="row mt-3">
                    @{
                        var critica = Model.ResultadosFiltrados.Count(c => c.NivelPrioridad == "Crítica");
                        var alta = Model.ResultadosFiltrados.Count(c => c.NivelPrioridad == "Alta");
                        var media = Model.ResultadosFiltrados.Count(c => c.NivelPrioridad == "Media");
                        var baja = Model.ResultadosFiltrados.Count(c => c.NivelPrioridad == "Baja");
                    }

                    <div class="col-md-3">
                        <div class="card bg-danger text-white text-center">
                            <div class="card-body">
                                <h4>@critica</h4>
                                <small>Crítica</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-dark text-center">
                            <div class="card-body">
                                <h4>@alta</h4>
                                <small>Alta</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-info text-white text-center">
                            <div class="card-body">
                                <h4>@media</h4>
                                <small>Media</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-secondary text-white text-center">
                            <div class="card-body">
                                <h4>@baja</h4>
                                <small>Baja</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-inbox display-1 text-muted"></i>
                        <h4 class="text-muted">Sin Resultados</h4>
                        <p class="text-muted">
                            No se encontraron clientes que coincidan con los filtros aplicados.
                            <br />Pruebe ajustando los criterios de búsqueda.
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>
    // Mostrar/ocultar campo nombre del filtro
    document.querySelector('[name="GuardarFiltro"]').addEventListener('change', function() {
        const div = document.getElementById('nombreFiltroDiv');
        if (this.checked) {
            div.style.display = 'block';
            div.querySelector('input').required = true;
        } else {
            div.style.display = 'none';
            div.querySelector('input').required = false;
        }
    });

    // Limpiar formulario
    function limpiarFiltros() {
        document.querySelector('form').reset();
        document.getElementById('nombreFiltroDiv').style.display = 'none';
    }

    // Auto-envío después de 3 segundos si el tiempo es menor a 3 segundos
    @if (Model.TiempoRespuesta.TotalSeconds < 3 && Model.ResultadosFiltrados.Any())
    {
        @:// Criterio de aceptación 2 cumplido: menos de 3 segundos
        @:console.log('✅ Criterio de Aceptación 2: Filtros aplicados en @Model.TiempoRespuesta.TotalSeconds.ToString("F2") segundos (< 3s)');
    }
</script>

<style>
    .table-responsive {
        max-height: 600px;
        overflow-y: auto;
    }
    
    .card {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
</style>